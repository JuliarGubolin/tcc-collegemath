<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollegeMath.App.Views.InformationView"
             BackgroundColor="{StaticResource backgroundColor}">
    <ContentPage.Content>
        <StackLayout Margin="12, 24, 12, 24">
            <Label Text="Créditos das imagens:" HorizontalOptions="CenterAndExpand" FontSize="Medium" TextColor="White"/>
            <BoxView BackgroundColor="{StaticResource buttonColor4}" HeightRequest="2" WidthRequest="300" Margin="8"></BoxView>
            <Label Text="Lightbulb Icon by Vaadin Icons on IconScout" HorizontalOptions="StartAndExpand" FontSize="16" TextColor="White"/>
            <Label Text="Twitter logo icon by Juraj Sedlák on Icon-Icons" HorizontalOptions="StartAndExpand" FontSize="16" TextColor="White"/>
            <Label Text="Functions icon by CoreUI on Icon-Icons" HorizontalOptions="StartAndExpand" FontSize="16" TextColor="White"/>
            <Label Text="Info icon by Perpixel on Icon-Icons" HorizontalOptions="StartAndExpand" FontSize="16" TextColor="White"/>
            <Label Text="ITrophy icon by Free Icons on Icon-Icons" HorizontalOptions="StartAndExpand" FontSize="16" TextColor="White"/>
            <Label Text="Logout icon by Muhammad Huda on Icon-Icons" HorizontalOptions="StartAndExpand" FontSize="16" TextColor="White"/>
            <Label Text="Set icon by Community on Icon-Icons" HorizontalOptions="StartAndExpand" FontSize="16" TextColor="White"/>
            <Label Text="Math, operation icon by Situ Herrera on Icon-Icons" HorizontalOptions="StartAndExpand" FontSize="16" TextColor="White"/>
            <Label Text="Pixel Art Male on freesvg" HorizontalOptions="StartAndExpand" FontSize="16" TextColor="White"/>
            <Label Text="Cozy Town Asset Pack by shubibubi on itch.io" HorizontalOptions="StartAndExpand" FontSize="16" TextColor="White"/>

            <Label Text="Questões e soluções" HorizontalOptions="CenterAndExpand" FontSize="Medium" TextColor="White"/>
            <BoxView BackgroundColor="{StaticResource buttonColor4}" HeightRequest="2" WidthRequest="300" Margin="8"></BoxView>
            <Label Text="As soluções podem ser apresentadas por links para vídeos e sites, imagens e/ou textos. No caso dos textos, está indicado na documentação e na parte inferior o autor da resolução!" HorizontalOptions="StartAndExpand" FontSize="16" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage> 